#include <stdio.h>
#include <limits.h>
#include "main.h"

int main(void)
{
    int result_std, result_custom;
    int passed = 0, total = 0;

    /* Test 1: Simple string */
    total++;
    result_std = printf("Standard printf: %s\n", "Hello, world!");
    result_custom = _printf("Custom _printf: %s\n", "Hello, world!");
    if (result_std == result_custom)
        passed++;
    else
        printf("Test 1 failed: Expected %d, got %d\n", result_std, result_custom);

    /* Test 2: Character */
    total++;
    result_std = printf("Standard printf: %c\n", 'A');
    result_custom = _printf("Custom _printf: %c\n", 'A');
    if (result_std == result_custom)
        passed++;
    else
        printf("Test 2 failed: Expected %d, got %d\n", result_std, result_custom);

    /* Test 3: Integer */
    total++;
    result_std = printf("Standard printf: %d\n", 42);
    result_custom = _printf("Custom _printf: %d\n", 42);
    if (result_std == result_custom)
        passed++;
    else
        printf("Test 3 failed: Expected %d, got %d\n", result_std, result_custom);

    /* Test 4: Percent sign */
    total++;
    result_std = printf("Standard printf: %%\n");
    result_custom = _printf("Custom _printf: %%\n");
    if (result_std == result_custom)
        passed++;
    else
        printf("Test 4 failed: Expected %d, got %d\n", result_std, result_custom);

    /* Summary of test results */
    printf("\nPassed %d/%d tests.\n", passed, total);

    return (0);
}
